<h2>
  <%= link_to 'Go to the index', root_url %>
</h2>

<%= form_for (@comment) do |f| %>
    <%= f.label :author_name %>
    <%= f.text_field :author_name, class: 'form-control' %>

    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>

    <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
