<p>Title: <%= @post.title %></p>
<p>Author: <%= @post.author_name %></p>
<p>Content: <%= @post.content %></p>
<p><%= image_tag @post.picture.data_url if @post.picture %></p>

<% if @post_tags %>
  <div>
    <p>Tags:</p>
    <% @post_tags.each do |tag| %>
      <%= link_to tag.name, tag %>
    <% end %>
  </div>
<% end %>
