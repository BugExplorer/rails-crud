h2
  = link_to t('go', name: 'the index'), root_url

.container
  .row
    .col-md-8.col-md-offset-2
      .well
        .media
          .media-body
            h4 class="media-heading"
              = @comment.author_name

              small   Posted #{time_ago_in_words(@comment.created_at)} ago.
              small = link_to t('actions.show'), @comment
              small = link_to t('actions.edit'), edit_comment_path
              small
                = link_to t('actions.delete'), @comment, method: :delete,
                    data: { confirm: t('actions.sure') }
            = @comment.content


